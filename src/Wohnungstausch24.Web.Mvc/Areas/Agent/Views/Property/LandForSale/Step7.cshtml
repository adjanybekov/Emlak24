@using Wohnungstausch24.Resources
@model Wohnungstausch24.Models.ViewModels.Listings.Steps.Step7.Step7ViewModel

@{
    Layout = "~/Areas/Agent/Views/Shared/_Layout.cshtml";
}

<div class="site site--dashboard">
    <div class="site__main">
        <div class="widget js-widget widget--dashboard">
            <div class="widget__header">
                <h2 class="widget__title">@Resource.Add_New_Property</h2>
            </div>
            <div class="widget__content">
                <section class="form-property form-property--dashboard">
                    @Html.Partial("LandForSale/_Steps", Model.StepsProgressModel)
                    <div class="form-property__content">
                        @using (Html.BeginForm("Step7", "Property", FormMethod.Post, new { @class = "form form--flex form--property-add js-form js-form-property" }))
                        {
                            <div class="row">
                                <b>@Resource.Property_Step7Land_Exploitation_quotient</b>
                                <div class="col-md-12">
                                    <div class="col-md-4">
                                        <div class="input-group">
                                            @Html.TextBoxFor(m => m.Step7LandForSale.ExploitationNum, new {   @class = "form-control", min = "1" })
                                            <span class="input-group-addon">
                                                <b>m<sup>2</sup> space</b>
                                            </span>
                                            @Html.ValidationMessageFor(m => m.Step7LandForSale.ExploitationNum, null, new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <div class="col-md-1">/
                                    </div>


                                    <div class="col-md-4">
                                        <div class="input-group">
                                            @Html.TextBoxFor(m => m.Step7LandForSale.ExploitationDenum, new {   @class = "form-control", min = "1" })
                                            <span class="input-group-addon">
                                                <b>m<sup>2</sup> land area</b>
                                            </span>
                                            @Html.ValidationMessageFor(m => m.Step7LandForSale.ExploitationDenum, null, new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <hr />


                            <div class="col-md-6">
                                <div class="row">
                                    <div class="form-group form-group--col-12">
                                        @Html.LabelFor(m => m.Step7LandForSale.GRZ, new { @class = "control-label" })
                                        <div class="input-group">
                                            @Html.TextBoxFor(m => m.Step7LandForSale.GRZ, new {   @class = "form-control", min = "1" })
                                            <span class="input-group-addon">
                                                <b>m<sup>2</sup></b>
                                            </span>
                                            @Html.ValidationMessageFor(m => m.Step7LandForSale.GRZ, null, new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="form-group form-group--col-12">

                                        @Html.LabelFor(m => m.Step7LandForSale.GFZ, new { @class = "control-label" })
                                        <div class="input-group">
                                            @Html.TextBoxFor(m => m.Step7LandForSale.GFZ, new {   @class = "form-control", min = "1" })
                                            <span class="input-group-addon">
                                                <b>m<sup>2</sup></b>
                                            </span>
                                            @Html.ValidationMessageFor(m => m.Step7LandForSale.GFZ, null, new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="form-group form-group--col-12">
                                        @Html.LabelFor(m => m.Step7LandForSale.NumberOfLevels, new { @class = "control-label" })
                                        @Html.TextBoxFor(m => m.Step7LandForSale.NumberOfLevels, new {   @class = "form-control", min = "1" })
                                        @Html.ValidationMessageFor(m => m.Step7LandForSale.NumberOfLevels, null, new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="form-group form-group--col-12">

                                        @Html.LabelFor(m => m.Step7LandForSale.BuldingBank, new { @class = "control-label" })
                                        <div class="input-group">
                                            @Html.TextBoxFor(m => m.Step7LandForSale.BuldingBank, new {   @class = "form-control", min = "1" })
                                            <span class="input-group-addon">
                                                <b>m</b>
                                            </span>
                                            @Html.ValidationMessageFor(m => m.Step7LandForSale.BuldingBank, null, new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </div>
                            </div>


                            <div class="col-md-6">
                                <div class="col-md-12" id="kitchen-area-data-div">
                                    <div class="form-group form-group--col-12">
                                        <div class="panel panel-primary">
                                            <div class="panel-heading">@Resource.Property_Step7_AmountOfAllotment</div>
                                            <div class="panel-body">
                                                <div class="row">
                                                    <div class="col-md-12">
                                                        @Html.CheckBoxFor(m => m.Step7LandForSale.Gaz, new { @class = "in-checkbox" })
                                                        @Html.LabelFor(m => m.Step7LandForSale.Gaz, new { @class = "in-label" })
                                                    </div>
                                                    <div class="col-md-12">
                                                        @Html.CheckBoxFor(m => m.Step7LandForSale.Water, new { @class = "in-checkbox" })
                                                        @Html.LabelFor(m => m.Step7LandForSale.Water, new { @class = "in-label" })
                                                    </div>
                                                    <div class="col-md-12">
                                                        @Html.CheckBoxFor(m => m.Step7LandForSale.Electricity, new { @class = "in-checkbox" })
                                                        @Html.LabelFor(m => m.Step7LandForSale.Electricity, new { @class = "in-label" })
                                                    </div>
                                                    <div class="col-md-12">
                                                        @Html.CheckBoxFor(m => m.Step7LandForSale.TK, new { @class = "in-checkbox" })
                                                        @Html.LabelFor(m => m.Step7LandForSale.TK, new { @class = "in-label" })
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="row">
                                        <div class="col-md-12">
                                            @Html.LabelFor(m => m.Step7LandForSale.BuildingType, new { @class = "control-label" })
                                            @Html.EnumDropDownListFor(m => m.Step7LandForSale.BuildingType, Resource.PleaseChoose, new { @class = "form-control js-in-select" })
                                            @Html.ValidationMessageFor(m => m.Step7LandForSale.BuildingType, null, new { @class = "text-danger" })
                                        </div>
                                        <div class="col-md-12">
                                            @Html.LabelFor(m => m.Step7LandForSale.AllotmentType, new { @class = "control-label" })
                                                @Html.EnumDropDownListFor(m => m.Step7LandForSale.AllotmentType, Resource.PleaseChoose, new { @class = "form-control js-in-select" })
                                                @Html.ValidationMessageFor(m => m.Step7LandForSale.AllotmentType, null, new { @class = "text-danger" })
                                            </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="row">
                                    <a class="form__submit" href="@Url.Action("Step6", new {id = Model.Id})"><i class="fa fa-angle-left"></i> @Resource.Back</a>
                                    <button type="submit" class="form__submit">@Resource.Property_Step9_SaveAndPublish <i class="fa fa-angle-right"></i></button>
                                </div>
                            </div>
                        }
                    </div>
                </section>



            </div>
        </div>
    </div>
</div>
