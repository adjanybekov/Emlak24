@using Wohnungstausch24.Core.EnumExtensions
@using Wohnungstausch24.Resources
@using Wohnungstausch24.Web.Mvc.Helpers
@model Wohnungstausch24.Models.ViewModels.Listings.Steps.Step1.Step1ViewModel

@{
    Layout = "~/Areas/Agent/Views/Shared/_Layout.cshtml";
}

@{
    var viewData = new ViewDataDictionary { TemplateInfo = new TemplateInfo { HtmlFieldPrefix = nameof(Model.Step1RoomForRent) } };
}
<div class="site site--dashboard">
    <div class="site__main">
        <div class="widget js-widget widget--dashboard">
            <div class="widget__header">
                <h2 class="widget__title">@ViewBag.Title</h2>
            </div>
            <div class="widget__content">
                <section class="form-property form-property--dashboard">
                    @Html.Partial("RoomForRent/_Steps", Model.StepsProgressModel)
                    <div class="form-property__content">
                        @using (Html.BeginForm("Step1", "Property", FormMethod.Post, new { @class = "form form--flex form--property-add" }))
                        {
                            @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                            @Html.HiddenFor(m => m.Id)
                            <div class="row">
                                <div class="row">
                                    <div class="form-group">
                                        @Html.LabelFor(m => m.Step1RoomForRent.PropertyTpe, new { @class = "control-label" })
                                        @Html.Label(Model.Step1RoomForRent.PropertyTpe.GetDisplayName(), new { @class = "alert alert-info control-label" })
                                    </div>
                                    <div class="form-group">
                                        @Html.LabelFor(m => m.Step1RoomForRent.TypeOfMerchandising, new { @class = "control-label" })
                                        @Html.Label(Model.Step1RoomForRent.TypeOfMerchandising.GetDisplayName(), new { @class = "alert alert-info control-label" })
                                    </div>
                                    <div class="form-group">
                                        @Html.LabelFor(m => m.Step1RoomForRent.TypeOfUse, new { @class = "control-label" })
                                        @Html.Label(Model.Step1RoomForRent.TypeOfUse.GetDisplayName(), new { @class = "alert alert-info control-label" })
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="form-group form-group--description">
                                    @Html.LabelFor(m => m.Step1RoomForRent.PropertySubType, new { @class = "control-label" })
                                    @Html.DropDownListFor(m => m.Step1RoomForRent.PropertySubType, Model.Step1RoomForRent.PropertySubTypes, Resource.PleaseChoose, new { @class = "form-control js-in-select" })
                                    @Html.ValidationMessageFor(m => m.Step1RoomForRent.PropertySubType, null, new { @class = "text-danger" })
                                </div>
                                <div class="form-group form-group--description">
                                    @Html.LabelFor(m => m.Step1RoomForRent.Level, new { @class = "control-label" })
                                    @Html.TextBoxFor(m => m.Step1RoomForRent.Level, new { @class = "form-control", min = "-1" })
                                    @Html.ValidationMessageFor(m => m.Step1RoomForRent.Level, null, new { @class = "text-danger" })
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(m => m.Step1RoomForRent.NumberOfLevels, new { @class = "control-label" })
                                    @Html.TextBoxFor(m => m.Step1RoomForRent.NumberOfLevels, new { @class = "form-control", min = "1" })
                                    @Html.ValidationMessageFor(m => m.Step1RoomForRent.NumberOfLevels, null, new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="row">
                                <div class="form-group">
                                    @Html.LabelFor(m => m.Step1RoomForRent.PositionInBuilding, new { @class = "control-label" })
                                    @Html.EnumDropDownListFor(m => m.Step1RoomForRent.PositionInBuilding, Resource.PleaseChoose, new { @class = "form-control js-in-select" })
                                    @Html.ValidationMessageFor(m => m.Step1RoomForRent.PositionInBuilding, null, new { @class = "text-danger" })
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(m => m.Step1RoomForRent.NumberOfApartmentUnits, new { @class = "control-label" })
                                    @Html.TextBoxFor(m => m.Step1RoomForRent.NumberOfApartmentUnits, new { @class = "form-control", min = "1" })
                                    @Html.ValidationMessageFor(m => m.Step1RoomForRent.NumberOfApartmentUnits, null, new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="row">
                                <div class="form-group">
                                    @Html.LabelFor(m => m.Step1RoomForRent.IsFurnished, new { @class = "control-label" })
                                    @Html.ToggleButtonFor(m => m.Step1RoomForRent.IsFurnished, new ToggleOptions { OnShowId = "furnish-type" })
                                    @Html.ValidationMessageFor(m => m.Step1RoomForRent.IsFurnished, null, new { @class = "text-danger" })
                                </div>
                                <div class="form-group" id="furnish-type" style="display: none;">
                                    @Html.LabelFor(m => m.Step1RoomForRent.FurnishType, new { @class = "control-label" })
                                    @Html.EnumDropDownListFor(m => m.Step1RoomForRent.FurnishType, Resource.PleaseChoose, new { @class = "form-control js-in-select" })
                                    @Html.ValidationMessageFor(m => m.Step1RoomForRent.FurnishType, null, new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(m => m.Step1RoomForRent.IsShared, new { @class = "control-label" })
                                @Html.ToggleButtonFor(m => m.Step1RoomForRent.IsShared)
                                @Html.ValidationMessageFor(m => m.Step1RoomForRent.IsShared, null, new { @class = "text-danger" })
                            </div>

                                <div class="row">
                                    <div class="form-group">
                                        @Html.LabelFor(m => m.Step1RoomForRent.ForIndustrialUse, new { @class = "control-label" })
                                        @Html.ToggleButtonFor(m => m.Step1RoomForRent.ForIndustrialUse)
                                        @Html.ValidationMessageFor(m => m.Step1RoomForRent.ForIndustrialUse, null, new { @class = "text-danger" })
                                    </div>
                                    <div class="form-group">
                                        @Html.LabelFor(m => m.Step1RoomForRent.ForHolidayUse, new { @class = "control-label" })
                                        @Html.ToggleButtonFor(m => m.Step1RoomForRent.ForHolidayUse)
                                        @Html.ValidationMessageFor(m => m.Step1RoomForRent.ForHolidayUse, null, new { @class = "text-danger" })
                                    </div>
                                </div>
                                @Html.Partial("Common/_LocationSelection", Model.Step1RoomForRent, viewData)

                                <div class="row">
                                    <a href="@Url.Action("Index","Home",new {area="Agent"})" class="form__submit"><i class="fa fa-angle-left"></i> @Resource.Cancel</a>
                                    <button type="submit" class="form__submit">@Resource.Next <i class="fa fa-angle-right"></i></button>
                                </div>
                        }
                    </div>
                </section>
            </div>
        </div>
    </div>
</div>



@section scripts
{
    <script type="text/javascript">
        var locationLevel1 = $('#@Html.IdFor(m => m.Step1RoomForRent.SelectedLocationlevel1)');
        var locationLevel2 = $('#@Html.IdFor(m => m.Step1RoomForRent.SelectedLocationlevel2)');
        var locationLevel3 = $('#@Html.IdFor(m => m.Step1RoomForRent.Locationlevel3)');

        $('#@Html.IdFor(m => m.Step1RoomForRent.SelectedCountry)')
            .change(function() {

                if (!$(this).val()) {
                    resetDropdown(locationLevel1);
                    resetDropdown(locationLevel2);
                    resetDropdown(locationLevel3);
                    return;
                }
                var request = $.ajax({
                    url: '@Url.Action("GetLocationLevel1", "Locations", new {area = ""})',
                    method: "GET",
                    data: { countryId: $(this).val() },
                    contentType: "application/json",
                    dataType: "json"
                });
                request.done(function(data) {
                    resetDropdown(locationLevel1);
                    resetDropdown(locationLevel2);
                    resetDropdown(locationLevel3);
                    $.each(data,
                        function(index, item) {
                            locationLevel1.append($('<option></option>').val(item.Value).text(item.Text));
                        });
                });
                request.fail(function(jqXHR, textStatus) {
                    alert("Request failed: " + textStatus);
                });
            });

        locationLevel1.change(function() {
            if (!$(this).val()) {
                resetDropdown(locationLevel2);
                resetDropdown(locationLevel3);
                return;
            }
            var request = $.ajax({
                url: '@Url.Action("GetLocationLevel2", "Locations", new {area = ""})',
                method: "GET",
                data: { locationLevel1: $(this).val() },
                contentType: "application/json",
                dataType: "json"
            });
            request.done(function(data) {
                resetDropdown(locationLevel2);
                resetDropdown(locationLevel3);
                $.each(data,
                    function(index, item) {
                        locationLevel2.append($('<option></option>').val(item.Value).text(item.Text));
                    });
            });
            request.fail(function(jqXHR, textStatus) {
                alert("Request failed: " + textStatus);
            });
        });

        locationLevel2.change(function() {
            if (!$(this).val()) {
                resetDropdown(locationLevel3);
                return;
            }
            var request = $.ajax({
                url: '@Url.Action("GetLocationLevel3", "Locations", new {area = ""})',
                method: "GET",
                data: { locationLevel2: $(this).val() },
                contentType: "application/json",
                dataType: "json"
            });
            request.done(function(data) {
                resetDropdown(locationLevel3);
                $.each(data,
                    function(index, item) {
                        locationLevel3.append($('<option></option>').val(item.Value).text(item.Text));
                    });
            });
            request.fail(function(jqXHR, textStatus) {
                alert("Request failed: " + textStatus);
            });
        });

        var resetDropdown = function(dropdown) {
            dropdown.empty();
            dropdown.append($('<option></option>').val(null).text('@Html.Raw(Resource.PleaseChoose)'));
            dropdown.selectedIndex = 0;
            dropdown.change();
        }
    </script>
}
