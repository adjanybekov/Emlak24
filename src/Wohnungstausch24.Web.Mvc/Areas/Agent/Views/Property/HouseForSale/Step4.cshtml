                                        </div>
                                    </fieldset>

                                </div>
                                <div class="col-md-6">
                                    <fieldset>
                                        <legend>@Resource.Add_Property_Rooms</legend>
                                        <div class="row">
                                            <div class="form-group form-group--col-12">
                                                <div class="col-md-8">
                                                    @Html.LabelFor(m => m.Step4HouseForSale.NumberOfRooms, new { @class = "control-label" })
                                                </div>
                                                <div class="col-md-4">
                                                    @Html.TextBoxFor(m => m.Step4HouseForSale.NumberOfRooms, new {  @class = "form-control" })
