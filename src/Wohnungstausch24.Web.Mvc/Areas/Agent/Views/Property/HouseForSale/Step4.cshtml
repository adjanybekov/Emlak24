                                        @Html.LabelFor(m => m.Step4HouseForSale.HasBalcony, new { @class = "control-label" })
                                    </div>
                                    <div class="col-md-4">
                                        @Html.CheckBoxFor(m => m.Step4HouseForSale.HasBalcony, new { @class = "in-checkbox pull-right", data_toggle = "toggle", data_on = Resource.Yes, data_off = Resource.No, data_onstyle = "success", data_offstyle = "danger" })
