@model Wohnungstausch24.Models.ViewModels.Property.AddDistanceToViewModel
@using Wohnungstausch24.Resources
@{
    var addDistanceAjaxOpts = new AjaxOptions
    {
        HttpMethod = "POST",
        InsertionMode = InsertionMode.Replace,
        UpdateTargetId = "viewDetailsDistanceData",
        OnBegin = "showDistanceLoader",
        OnComplete = "hideDistanceLoader"
    };
}
<!-- Modal -->
<div class="modal fade" id="addDistanceModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="myModalLabel">@Resource.Add_Property_Distance</h4>
            </div>
            @using (Ajax.BeginForm("AddDistanceTo", "Property", null, addDistanceAjaxOpts, new { @class = "form form--flex" }))
            {
                @Html.HiddenFor(m => m.Id)
                <div class="modal-body">
                    <div class="row">
                        <div class="form-group form-group--col-12">
                            <div class="col-md-6">
                                @Html.LabelFor(m => m.DistanceType, new { @class = "control-label" })
                            </div>
                            <div class="col-md-6">
                                @Html.EnumDropDownListFor(m => m.DistanceType, Resource.PleaseChoose, new { required = "", @class = "form-control js-in-select" })
                            </div>
                            @Html.ValidationMessageFor(m => m.DistanceType, null, new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group form-group--col-12">
                            <div class="col-md-8">
                                @Html.LabelFor(m => m.Distance, new { @class = "control-label" })
                            </div>
                            <div class="col-md-4">
                                @Html.TextBoxFor(m => m.Distance, new { @class = "form-control" })
                            </div>
                            @Html.ValidationMessageFor(m => m.Distance, null, new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">@Resource.Cancel</button>
                    <button type="submit" class="btn btn-primary">@Resource.OK</button>
                </div>
            }
        </div>
    </div>
</div>