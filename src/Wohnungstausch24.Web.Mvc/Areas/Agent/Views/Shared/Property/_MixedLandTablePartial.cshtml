@using Wohnungstausch24.Core.EnumExtensions
@using Wohnungstausch24.Core.Extensions
@using Wohnungstausch24.Resources
@model List<Wohnungstausch24.Models.ViewModels.Agent.MixedLandViewModel>

<div class="col-md-12" id="mixedland-area-data-div">
    <div class="form-group form-group--col-12">
        <table class="table table-responsive table-stripped">
            <thead>
                <tr>
                    <th colspan="6">
                        <div class="row">
                            <div class="col-md-8">
                                @Resource.Property_Step4_mixedlands
                            </div>
                            <div class="col-md-4">
                                <a class="btn btn-xs btn-primary pull-right" href="#" data-toggle="modal" data-target="#addMixedlandModal">@Resource.General_Table_Add_new<i class="fa fa-plus"></i></a>
                            </div>
                        </div>
                    </th>
                </tr>
                <tr>
                    <th>#</th>
                    <th>@Resource.TypeOfUse</th>
                    <th>@Resource.Property_Add_TotalArea</th>
                    <th>@Resource.Property_Step4_MixedLands_Plot</th>
                    <th>@Resource.Property_Step4_MixedLands_Separable</th>
                    <th>@Resource.Options</th>
                </tr>
            </thead>
            @for (var i = 1; i <= Model.Count(); i++)
            {
                <tr>
                    <td>@i</td>
                    <td>@Model[i - 1].TypeOfUse.GetDisplayName()</td>
                    <td>@Html.DisplayFor(m => Model[i - 1].TotalArea, new { @class = "" })</td>
                    <td>@Html.DisplayFor(m => Model[i - 1].PlotArea, new { @class = "" })</td>
                    <td>@Html.DisplayFor(m => Model[i - 1].SeparableFrom, new { @class = "" })</td>
                    <td>
                        <a href="@Url.Action("DeleteMixedLand","Property",new {id = Model[i - 1].Id})" class="btn btn--action wt24-mixedland-confirmation"><i class="fa fa-trash"></i></a>
                    </td>
                </tr>
            }
        </table>
    </div>
</div>
<div class="loading"></div>