@using Wohnungstausch24.Core.Extensions
@using Wohnungstausch24.Resources
@model List<Wohnungstausch24.Models.ViewModels.Agent.BathroomViewModel>

<div class="col-md-12" id="bathroom-area-data-div">
    <div class="form-group form-group--col-12">
        <table class="table table-responsive table-stripped">
            <thead>
                <tr>
                    <th colspan="8">
                        <div class="row">
                            <div class="col-md-8">
                                @Resource.AddBathroomViewModel
                            </div>
                            <div class="col-md-4">
                                <a class="btn btn-xs btn-primary pull-right" href="#" data-toggle="modal" data-target="#addBathroomModal"> @Resource.General_Table_Add_new<i class="fa fa-plus"></i></a>
                            </div>
                        </div>
                    </th>
                </tr>
            </thead>
            <tr>
                <th>#</th>
                <th>@Resource.Enum_FeatureType_HasUrinal</th>
                <th>@Resource.Enum_FeatureType_HasWindow</th>
                <th>@Resource.Enum_FeatureType_HasTub</th>
                <th>@Resource.Enum_FeatureType_HasBidet</th>
                <th>@Resource.Enum_FeatureType_HasShower</th>
                <th>@Resource.Size</th>
                <th>@Resource.Options</th>
            </tr>
            @for (var i = 1; i <= Model.Count(); i++)
            {
                <tr>
                    <td>@i</td>
                    <td>@Html.DisplayFor(m => Model[i - 1].HasUrinal, new {@class = ""})</td>
                    <td>@Html.DisplayFor(m => Model[i - 1].HasWindow, new {@class = ""})</td>
                    <td>@Html.DisplayFor(m => Model[i - 1].HasTub, new {@class = ""})</td>
                    <td>@Html.DisplayFor(m => Model[i - 1].HasBidet, new {@class = ""})</td>
                    <td>@Html.DisplayFor(m => Model[i - 1].HasShower, new {@class = ""})</td>
                    <td>@Html.DisplayFor(m => Model[i - 1].Size, new {@class = ""})</td>
                    <td>
                        <a href="@Url.Action("DeleteBathroom", "Property", new {id = Model[i - 1].Id})" class="btn btn--action wt24-bathroom-confirmation"><i class="fa fa-trash"></i></a>
                    </td>
                </tr>
            }
        </table>
    </div>
</div>
<div class="loading"></div>
