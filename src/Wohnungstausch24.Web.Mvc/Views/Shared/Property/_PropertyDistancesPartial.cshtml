@using Wohnungstausch24.Core.EnumExtensions
@model Wohnungstausch24.Models.ViewModels.Listings.ListingDetail.Base.DetailListing

<div class="row">
    <div class="col-md-12">
        <div class="row">
            <div class="col-md-2">
                <div>
                    <i class="fa fa-3x fa-map-o text-primary property-features-icon" style="color: #015bbb"></i>
                </div>
            </div>
            <div class="col-md-10">
                <div class="property__params">
                    <h4 class="property__subtitle">Distances</h4>
                    <ul class="property__params-list">
                        @for (var i = 0; i < Model.Distances.Count; i++)
                        {
                            <li>
                                @Model.Distances[i].DistanceType.GetDisplayName()<strong>@Model.Distances[i].DistanceInKm Km</strong>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </div>
    </div>    
</div>

