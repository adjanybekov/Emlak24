    .sidebar
      +widget(null, null, 'sidebar widget--first-no-head', 'Show profile', null, 'toggle')
        - var userType = 'sidebar-advanced';
        include partials/chunks/sidebar/worker_profile
      +widget('Our agents', 'Find your apartment or house on the exact key parameters.', 'sidebar widget--dark', 'Show worker', null, 'toggle')
        .listing.listing--sidebar
          - var i = -1;
          while i++ < 2
            .listing__item
              +worker(i, 'sidebar')

    .clearfix

