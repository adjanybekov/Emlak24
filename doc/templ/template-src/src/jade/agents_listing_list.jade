extends partials/layout/_base
block config
  - var bodyClass = '';
  - var page = 'agents_listing_list';

block before_center
  // BEGIN BREADCRUMBS
  nav.breadcrumbs
    .container
      ul
        li.breadcrumbs__item
          a.breadcrumbs__link(href='') Home
        li.breadcrumbs__item
          a.breadcrumbs__link(href='') Agents listing
  // END BREADCRUMBS
block center
  .row
    // BEGIN site
    section.site.site--main
      header.site__header
        h3.site__title Agents listing
        h4.site__headline Our team of agents consists of 8 persons
      .site__panel
        span.site__header-text
          | Our team of agents are ready to help you reach your real estate goals by making your needs our number one priority. We recognize you have a choice when it comes to working with a real estate professional.
      .site__main
        +widget(null, null, 'main')
          .listing.listing--list
            - var i = -1;
            while i++ < 7
              .listing__item
                +worker(i, 'list')

        .clearfix

    // END site
    // BEGIN SIDEBAR
    .sidebar
      +widget('Filter', 'Find your apartment or house on the exact key parameters.', 'sidebar', 'Show filter', null, 'toggle')
        - var searchType = 'sidebar'
        include partials/widgets/form--search

      +widget('Popular estate', 'Find your apartment or house on the exact key parameters.', 'sidebar widget--dark', 'Show properties', null, 'toggle')
        .listing.listing--sidebar
          - var i = 0;
          while i++ < 3
            .listing__item
              +properties(i, 'sidebar')
      +widget('Our agents', 'Find your apartment or house on the exact key parameters.', 'sidebar widget--dark', 'Show workers', null, 'toggle')
        .listing.listing--sidebar
          - var i = -1;
          while i++ < 2
            .listing__item
              +worker(i, 'sidebar')
      +widget('News & Blog', 'Find your apartment or house on the exact key parameters.', 'sidebar', 'Show articles', null, 'toggle')
        - var articleType = 'sidebar';
        include partials/widgets/article
      // END SIDEBAR
    // END SIDEBAR
    .clearfix
