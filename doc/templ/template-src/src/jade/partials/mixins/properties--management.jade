mixin propertiesManagement(title, limit, type, btn, btnLink, btnClass)
  +widget(title, null, 'dashboard', btn, btnLink, btnClass)
    .listing.listing--grid
      - var i = -1;
      while i++ < limit
        .listing__item
          include ../chunks/properties_item--management

    if type == 'list'
      .widget__footer
        a.widget__more Show more properties
